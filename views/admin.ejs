<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
        body {
            background-color: #f8f9fa;
        }
        .navbar-dark {
            background-color: #343a40;
        }
        .container {
            margin-top: 80px;
        }
    </style>
<body>
    <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Dashboard</span>
            <div>
                <span class="text-white me-3">Welcome, <%= user.username %> (<%= user.role %>)</span>
                <% if (user.role === 'admin') { %>
                    <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">Dashboard</a>
                <% } %>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
    </div>
    <div class="container">
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Date Published</th>
                    <th>Stocks</th>
                    <th>Available</th>
                    <th><a href="/addbook" class="btn btn-primary btn-sm">Add Book</a></th>
                </tr>
            </thead>
            <tbody>
                <% book.forEach(book => { %>
                    <tr>
                        <td><img src="<%= book.image %>" alt="<%= book.image %>" class="img-thumbnail" style="max-width: 100px;"></td>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.category %></td>
                        <td><%= book.description %></td>
                        <td><%= book.date_display %></td>
                        <td><%= book.stocks %></td>
                        <td><%= book.stocks > 0 ? 'Yes' : 'No' %></td>
                        <td>
                            <a href="/editbook/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a><br><br>
                            <a href="/deletebook/<%= book.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
