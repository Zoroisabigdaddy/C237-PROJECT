<div class="container mt-4">
  <h2>Edit Book</h2>
  <form action="/editbook/<%= book.id %>" method="POST">
    <div class="mb-3">
      <label>Image URL</label>
      <input type="text" name="image" class="form-control" value="<%= book.image %>" required>
    </div>
    <div class="mb-3">
      <label>Title</label>
      <input type="text" name="title" class="form-control" value="<%= book.title %>" required>
    </div>
    <div class="mb-3">
      <label>Author</label>
      <input type="text" name="author" class="form-control" value="<%= book.author %>" required>
    </div>
    <div class="mb-3">
      <label>Category</label>
      <input type="text" name="category" class="form-control" value="<%= book.category %>">
    </div>
    <div class="mb-3">
      <label>Description</label>
      <textarea name="description" class="form-control" rows="3"><%= book.description %></textarea>
    </div>
    <div class="mb-3">
      <label>Date Published</label>
      <input type="date" name="date_published" class="form-control" value="<%= book.date_input %>">
    </div>
    <div class="mb-3">
      <label>Stocks</label>
      <input type="number" name="stocks" class="form-control" value="<%= book.stocks %>" required>
    </div>
    <button type="submit" class="btn btn-success">Update Book</button>
  </form>
</div>

