<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add New Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    /* Custom Styles */
    body {
      background-image: url('/images/BG 2.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }

    .container {
      max-width: 800px;
      margin-top: 50px;
      background-color: rgba(105, 98, 98, 0.7);
      padding: 30px;
      border-radius: 10px;
    }

    .form-control {
      border-radius: 10px;
    }

    .btn {
      border-radius: 8px;
      padding: 10px 20px;
      font-size: 16px;
    }

    .btn-success {
      background-color: #136bca;
      border-color: #777272;
    }

    .btn-success:hover {
      background-color: #0a4599;
      border-color: #c9d1ca;
    }

    .btn-primary {
      background-color: #5b5f62;
      border-color: #424548;
    }

    .btn-primary:hover {
      background-color: #969ea5;
      border-color: #cfd6dd;
    }

    .card {
      border-radius: 10px;
      box-shadow: 4px 8px 12px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      font-size: 1.75rem;
      font-weight: bold;
      color: #343a40;
      background-color: #f8f9fa;
      border-bottom: 1px solid #ddd;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .mb-3 {
      margin-bottom: 1.5rem;
    }

    .mt-3 {
      margin-top: 1rem;
    }

    .back-btn {
      text-decoration: none;
      display: inline-block;
      margin-top: 0px;
    }

    .btn-container {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header text-center">
        Add New Book
      </div>
      <div class="card-body">

        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger">
            <ul>
              <% messages.forEach(function(msg) { %>
                <li><%= msg %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>

        <form action="/addbook" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              required
            />
          </div>

          <div class="form-group">
            <label for="author">Author</label>
            <input
              type="text"
              id="author"
              name="author"
              class="form-control"
              required
            />
          </div>

          <div class="form-group">
            <label for="category">Category</label>
            <select
              name="category"
              id="category"
              class="form-control"
              multiple
              required
            >
              <% categories.forEach(function(cat) { %>
                <option value="<%= cat %>"><%= cat %></option>
              <% }); %>
            </select>
            <small class="form-text text-muted">
              Hold Ctrl (Windows) or Cmd (Mac) to select multiple categories.
            </small>
          </div>

          <div class="form-group mt-2">
            <label for="newCategory">Or add a new category</label>
            <input
              type="text"
              id="newCategory"
              name="newCategory"
              class="form-control"
              placeholder="Enter new category"
            />
            <small class="form-text text-muted">
              If you add a new category here, it will be added along with selected categories.
            </small>
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              class="form-control"
              rows="4"
              required
            ></textarea>
          </div>

          <div class="form-group">
            <label for="date_published">Date Published</label>
            <input
              type="date"
              id="date_published"
              name="date_published"
              class="form-control"
              required
            />
          </div>

          <div class="form-group">
            <label for="stocks">Stocks</label>
            <input
              type="number"
              id="stocks"
              name="stocks"
              class="form-control"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="images">Image:</label><br />
            <input
              type="file"
              id="images"
              name="images"
              class="form-control"
              accept="image/*"
              required
            />
          </div>

          <div class="btn-container">
            <button type="submit" class="btn btn-success w-100">
              Add Book
            </button>
            <a href="/dashboard" class="btn btn-primary w-100 back-btn"
              >Back to Dashboard</a
            >
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
