<!DOCTYPE html>
<html>
<head>
    <title>Library Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fdf6e3; /* Light paper-like tone */
            font-family: 'Georgia', serif;
        }

        .container {
            max-width: 450px;
            margin-top: 80px;
            background-color: #fffaf0; /* light cream */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border: 1px solid #e0c097;
        }

        h1 {
            text-align: center;
            color: #4b3f29; /* Deep brown, book-like */
            margin-bottom: 25px;
        }

        label {
            color: #4b3f29;
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
            background-color: #5a4c36;
            border-color: #5a4c36;
        }

        .btn-primary:hover {
            background-color: #3e3322;
            border-color: #3e3322;
        }

        .alert-danger, .alert-success {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Library Login</h1>
        
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <form action="/login" method="POST">
            <div class="form-group mb-3">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <div class="form-group mb-4">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>

            <div class="text-center mt-3">
            <a href="/contact" class="text-decoration-none" style="color:#5a4c36;">
                Contact Us
            </a>
            </div>
        </form>
    </div>
</body>
</html>
