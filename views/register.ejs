<!DOCTYPE html>
<html>
<head>
    <title>Library Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fdf6e3; /* light paper tone */
            font-family: 'Georgia', serif;
        }

        .container {
            max-width: 500px;
            margin-top: 70px;
            background-color: #fffaf0;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border: 1px solid #e0c097;
        }

        h1 {
            text-align: center;
            color: #4b3f29;
            margin-bottom: 25px;
        }

        label {
            color: #4b3f29;
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
            background-color: #5a4c36;
            border-color: #5a4c36;
        }

        .btn-primary:hover {
            background-color: #3e3322;
            border-color: #3e3322;
        }

        .alert-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Register</h1>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="mt-4">
            <div class="form-group mb-3">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required 
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
            </div>

            <div class="form-group mb-3">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required 
                <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>
            </div>

            <div class="form-group mb-3">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <div class="form-group mb-3">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" class="form-control" required 
                <% if (formData && formData.address) { %> value="<%= formData.address %>" <% } else { %> value="" <% } %>>
            </div>

            <div class="form-group mb-3">
                <label for="contact">Contact Number:</label>
                <input type="text" id="contact" name="contact" class="form-control" required 
                <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>
            </div>

            <div class="form-group mb-4">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="user" <% if (formData && formData.role === 'user') { %> selected <% } %>>User</option>
                    <option value="admin" <% if (formData && formData.role === 'admin') { %> selected <% } %>>Admin</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>
