<!DOCTYPE html>
<html>
<head>
    <title>Library Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/public/images/Background for index.jfif') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Georgia', serif;
        }

        .container {
            max-width: 600px;
            margin-top: 80px;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            border: 1px solid #d0e0db;
            text-align: center;
        }

        h1 {
            color: #5a4c36;
            margin-bottom: 30px;
        }

        a.btn-primary {
            background-color: #5a4c36;
            border-color: #5a4c36;
            width: 120px;
            margin: 8px;
        }

        a.btn-primary:hover {
            background-color: #3e3322;
            border-color: #3e3322;
        }

        .alert-success {
            font-size: 0.95rem;
        }

        p {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Library</h1>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
            <p>Hello, <strong><%= user.username %></strong></p>
            <a href="/logout" class="btn btn-primary mt-3">Logout</a>
        <% } else { %>
            <a href="/register" class="btn btn-primary mt-3">Register</a>
            <a href="/login" class="btn btn-primary mt-3">Login</a>
        <% } %>
    </div>
</body>
</html>
