<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar-dark {
            background-color: #343a40;
        }
        .container {
            margin-top: 80px;
        }

        .form-inline .form-control {
            margin-right: 10px;
        }

        /* Optional: Make card images uniform */
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-dark fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Dashboard</span>
            <div>
                <% if (user) { %>
                    <span class="text-white me-3">Welcome, <%= user.username %> (<%= user.role %>)</span>
                    <% if (user.role === 'admin') { %>
                        <a href="/admin" class="btn btn-outline-light btn-sm me-2">Admin Dashboard</a>
                    <% } %>
                    <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
                <% } else { %>
                    <span class="text-white me-3">Welcome, Guest</span>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Search & Filter Form -->
        <form class="form-inline mb-4" method="GET" action="/dashboard">
            <input type="text" class="form-control" name="search" placeholder="Search title or author" value="<%= search %>">
            
            <select class="form-control" name="category">
                <option value="">All Categories</option>
                <option value="Fiction" <%= category === 'Fiction' ? 'selected' : '' %>>Fiction</option>
                <option value="Non-fiction" <%= category === 'Non-fiction' ? 'selected' : '' %>>Non-fiction</option>
                <option value="Mystery" <%= category === 'Mystery' ? 'selected' : '' %>>Mystery</option>
                <option value="Science" <%= category === 'Science' ? 'selected' : '' %>>Science</option>
            </select>

            <button type="submit" class="btn btn-primary ml-2">Search</button>
        </form>
    
        <!-- Book Cards (Replaced Table) -->
        <div class="row">
            <% book.forEach(book => { %>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/<%= book.images %>" class="card-img-top" alt="<%= book.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title %></h5>
                            <p class="card-text">
                                <strong>Author:</strong> <%= book.author %><br>
                                <strong>Category:</strong> <%= book.category %><br>
                                <small><%= book.description %></small>
                            </p>
                        </div>
                        <div class="card-footer text-muted">
                            Published: <%= book.date_display %><br>
                            <strong>Stock:</strong> <%= book.stocks %> (<%= book.stocks > 0 ? 'Available' : 'Not Available' %>)
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
